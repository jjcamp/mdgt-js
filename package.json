    ],
    "main": "lib/app.js",
    "typings": "lib/app.d.ts",
    "bin": {
        "mdgt": "./lib/app.js"
    },
    "scripts": {
        "clean": "rimraf lib",
        "lint": "tslint --force --format verbose \"src/**/*.ts\"",
